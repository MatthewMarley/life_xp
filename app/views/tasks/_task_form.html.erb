<%= form_for [@game, @task], url: game_tasks_path(@game) do |f| %>

    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Name of Task' %>
    </div>
    
    <div class="form-group">
        <%= f.label :points %>
        <%= f.number_field :points, class: 'form-control' %>
    </div>
    
    <div class="form-group">
        <%= f.submit "Submit Task", class: 'btn btn-primary' %>
    </div>
    

<% end %>